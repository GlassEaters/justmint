{
  "compilerOptions": {
    "module": "es2020",
    "target": "es5",
    "jsx": "react",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "downlevelIteration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots": ["types", "../../types", "../../node_modules/@types"],
    "paths": {
      "@bundlr-network/client/*": [
        "./node_modules/@bundlr-network/client/build/*"
      ]
    }
  }
}
